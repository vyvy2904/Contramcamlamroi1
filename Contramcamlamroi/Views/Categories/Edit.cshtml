@model Contramcamlamroi.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .col-md-10 {
        width: 50%;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 style="padding-left:110px;">Sửa Sản phẩm</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @*@Html.LabelFor(model => model.IDCate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                <p> Mã sản phẩm </p>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NameCate, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="control-label col-md-2">
                <p> Tên sản phẩm </p>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="btn btn-success" style="margin-left:30px;">
    @Html.ActionLink("Quay lại trang trước ", "Index")
</div>
@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}