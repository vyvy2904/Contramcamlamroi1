<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/script.js"></script>

    <style>
        #animation-top5 {
            color: white;
            text-shadow: 1px 1px 2px gray, 0 0 25px red, 0 0 5px red;
        }

        input[type="number"] {
            height: 20px;
        }
        /*.div-footer {
            position: fixed;
            text-align: center;
            bottom: 0;
            left: 0;
            padding-top: 15px;
            height: 50px;
            width: 100%;
            background-color: forestgreen;
        }*/
        li.format-hello {
            padding-top: 15px;
            color: white;
        }

        .navbar-inverse {
            background-color: white;
            border: 1px solid white;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

            .navbar-inverse .navbar-nav > li > a {
                color: black;
                font-size: 14px;
            }

        form {
            display: -webkit-inline-box;
        }

        .search-product-price input[type=text] {
            width: 400px;
            -webkit-transition: width 0.4s ease-in-out;
            transition: width 0.4s ease-in-out;
        }
        /* When the input field gets focus, change its width to 100% */

        input, select, textarea {
            max-width: 800px;
            height: 35px;
            background: #fff;
            -webkit-box-shadow: none;
            box-shadow: none;
            -webkit-transition: all 0.5s;
            transition: all 0.5s;
            border: solid 1px black;
        }

            input[type="text" i] {
                padding: 1px 2px;
                margin-top: 10px;
                border-radius: 5px;
            }

        td, th {
            padding-right: 10px;
        }

        input[type="submit"] {
            -webkit-appearance: button;
            cursor: pointer;
            margin-top: 10px;
        }

        input[type="submit"] {
            -webkit-appearance: button;
            cursor: pointer;
            margin-top: 10px;
            border: 1px solid green;
            border-radius: 10px;
            background: green;
            color: white;
            margin: 5px;
        }

        input[type="number"] {
            height: 30px;
            padding: 1px 2px;
            margin-top: 10px;
            border-radius: 5px;
            border: 2px solid #73AD21;
        }

        .col-md-10 {
            width: 50%;
        }

        .col-md-1, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-10, .col-md-9, .col-md-11, .col-md-12 {
            float: left;
            text-align: center;
            padding: 10px;
        }

        .col-md-2 {
            width: 15%;
            margin-left: 8%;
        }

        span.badge {
            float: right;
            margin-right: -8px;
        }

        .card-pro {
            border: 1px solid white;
            height: auto;
            border-radius: 10px;
            padding: 10px;
        }

        #myBtn {
            display: none; /* Hidden by default */
            position: fixed; /* Fixed/sticky position */
            bottom: 20px; /* Place the button at the bottom of the page */
            right: 30px; /* Place the button 30px from the right */
            z-index: 99; /* Make sure it does not overlap */
            border: none; /* Remove borders */
            outline: none; /* Remove outline */
            background-color: red; /* Set a background color */
            color: white; /* Text color */
            cursor: pointer; /* Add a mouse pointer on hover */
            padding: 15px; /* Some padding */
            border-radius: 10px; /* Rounded corners */
            font-size: 18px; /* Increase font size */
        }

            #myBtn:hover {
                background-color: #555; /* Add a dark-grey background on hover */
            }

        .product-nav:hover {
            color: lawngreen;
        }

        .navbar-inverse .navbar-nav > li > a {
            font-size: 17px;
            color: green;
            font-weight: 700;
        }

            .navbar-inverse .navbar-nav > li > a:after {
                content: '';
                position: absolute;
                left: 0;
                display: inline-block;
                height: 1em;
                width: 100%;
                border-bottom: 2px solid orange;
                margin-top: 10px;
                opacity: 0;
                -webkit-transition: opacity 0.35s, -webkit-transform 0.35s;
                transition: opacity 0.35s, transform 0.35s;
                -webkit-transform: scale(0,1);
                transform: scale(0,1);
            }

            .navbar-inverse .navbar-nav > li > a:hover:after {
                opacity: 1;
                -webkit-transform: scale(1);
                transform: scale(1);
            }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: orange;
            }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")"><img width="100" height="100" src="https://organicstore.vn/wp-content/uploads/2021/12/logo.png" class="header_logo header-logo" alt="Organic Store"></a>
            </div>
            <div class="navbar-collapse collapse" style="margin-left:25%;margin-top:3%;">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Product")">Sản Phẩm</a></li>
                    <li><a href="@Url.Action( "Index_Admin", "Product")"><span class="product-nav"></span>Kênh Người Bán</a></li>
                    <li><a href="@Url.Action("Contact", "Home")"><span class="product-nav"></span>Liên Hệ</a></li>
                </ul>

                <ul class="nav navbar-nav">

                    <li><a href="/LoginUser/RegisterUser"><span class="glyphicon glyphicon-user"></span>  Đăng Kí</a></li>
                    <li style="margin-top:4%;">|</li>
                    <li><a href="/LoginUser/Index"><span class="glyphicon glyphicon-user"></span>  Đăng Nhập</a></li>
                    <li><a href="@Url.Action("LogOutUser","LoginUser")"> Đăng xuất</a></li>
                    <li class="format-hello">
                        @if (Session["NameUser"] == null)
                        {
                            <span> Hello</span>
                        }

                        else
                        {
                            <span> <text> Hello </text> <a href="@Url.Action("Index_Admin","Product")">@Session["NameUser"]</a></span>
                        }
                    </li>

                </ul>

            </div>
            <div class="search-product-price" style="text-align: center;">
                @using (Html.BeginForm("Search", "Product"))
                {
                    <input type="text" name="_name" placeholder="Bạn muốn tìm gì ?...">
                    <input type="submit" value="Tìm" style="background-color: green; color: white; border-color: white; border-style: solid; border-width: 1px; border-radius: 3px; background-color: lawngreen; -webkit-box-shadow: 0px 1px 4px rgb(0 0 0 / 20%); box-shadow: 0px 1px 4px rgb(0 0 0 / 20%); " />
                }
                <span style="float:right;">
                    <a href="/ShoppingCart/ShowCart">
                        <img src="@Url.Content("~/Content/images/cart.png")" style="height:40px;width:40px;" />
                    </a>
                </span>
                @Html.Action("BagCart", "ShoppingCart")

            </div>
        </div>

    </div>

    <div class="row" style="margin-top:5%;height:auto;">
        <div class="col-md-12" style="width:100%;margin-left:0%;">
            <ul style="text-decoration:none;background-color:greenyellow;margin-top:20px;list-style-type:none;padding:10px;">
                <li><a href="/OrderDetail/GroupByTop5" style="color:white;" id="animation-top5">Top 5 sản phẩm bán chạy nhất</a></li>
                <li style="background-color:lightgray"></li>
            </ul>
        </div>
        <div class="col-md-2" style="margin-top:1%;margin-left:15%;">
            @{ Html.RenderAction("CategoryPartial", "Categories");}
        </div>

        <div class="col-md-10" id="div-content" style="margin-left: -230px;">
            <div class="slideshow-container">

            </div>
            @RenderBody()
        </div>
    </div>

    @*@ <div class="div-footer">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>*@
    <div class="active" style="background-color:white;height:20px">

    </div>
    <footer style=" background-color: lightgreen;margin-bottom:-20px;height:40px;text-align:center">
        <p>&copy; @DateTime.Now.Year - Liên Hệ : 1900 1234 5678 </p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>